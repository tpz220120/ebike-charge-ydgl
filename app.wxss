@import 'style/weui.wxss';
/**app.wxss**/
page {
  background-color: rgba(255,255,255,1);
  box-sizing: border-box;
}

.ui_flex{
  display: flex;
  align-content: center;
  align-items: center;
}

.ui_flex_center{
  display: flex;
  justify-content: center;
  align-items: center;
}

.ui_flex_c{
  display: flex;
  align-items: center;
}

.line{
  height:5px;
  background-color: #F3F3F3;
}

.btn{
  text-align: center;
  width:100%;
  height:44px;
  background:rgba(127,148,255,1);
  border-radius:5px;
  font-size:18px;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height: 44px;
}

.weui-media-box__desc{
  font-size:15px;
}

.weui-search-bar__cancel-btn{
  color:#3399FF;
}

.weui-search-bar__text{
  font-size:14px;
  line-height: 26px;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:rgba(179,179,179,1);
}

.weui-search-bar{
  background:rgba(255,255,255,1);
  box-shadow:0px 1px 6px 0px rgba(10,31,51,0.1);
}

.weui-search-bar__form{
  border:1px solid rgba(179,179,179,1);
  border-radius: 5px;
  line-height:28px;
}

.weui-navbar__item.weui-bar__item_on {
  color:#3399FF;
}

.weui-navbar__slider{
  background-color:#3399FF;
}

.weui-icon-search{
  margin-top:3px;
}
