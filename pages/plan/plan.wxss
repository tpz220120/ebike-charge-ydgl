.weui-navbar__item.weui-bar__item_on {
  color:#3399FF;
}

.weui-navbar__slider{
  background-color:#3399FF;
}

.page{
	  width:100%;
    font-family: MicrosoftYaHei;
    font-size:15px;
    color:#323232;
    margin: 0;
    background-color: rgba(255,255,255,1);
}

.item-text {
	position:absolute;
	top: 52px;
	height:80vh;
	width:100%;
	overflow:auto;
}

.re-center {
  background-color: #FFFFFF;
  height:90vh;
  overflow: hidden;
}

.nor-img {
   text-align:center; 
   padding-top:40%;
}

.nor-text {
   position:relative;
   top:5%;
   text-align:center;
   font-size:20px;
   color:#CCCCCC;
}
.blank{
  width:20%;
}

.blank2{
  width:20%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.col-btn{
   width:32px;
   height:15px;
   background:#7F94FF;
   border-radius:3px;
   text-align: center;
   font-size:8px;
   line-height:15px;
   margin:5px 7px;
   font-family:NotoSansHans-Regular;
   font-weight:400;
   color:rgba(255,255,255,1);
}

.yz_flex{
  display: flex;
  align-items: center;
  justify-content: center;
}

.col-title{
  font-size:12px;
  font-family:NotoSansHans-Regular;
  font-weight:400;
  color:rgba(144,144,144,1);
  height:34px;
  text-align: center;
  line-height: 34px;
}

.col-1{
  width:30%;
}

.col-2{
  width:40%;
}

.col-3{
  width:30%;
}

.flex_line{
  display: flex;
  flex-direction: row;/*设置子元素的排列方向*/
  align-items: center;
  flex-wrap: wrap;/*溢出则换行*/
}

.items{
    width: 100%;
}
.item{
    position: relative;
    border-bottom: 2rpx solid #F3F3F3;
    min-height:180rpx;
    line-height: 180rpx;
    overflow: hidden;
}

.inner{
    position: absolute;
    top:0;
}
.inner.txt{
    background-color: #fff;
    width: 100%;
    z-index: 5;
    transition: left 0.2s ease-in-out;
    overflow:hidden;

    font-size:12px;
    font-family:NotoSansHans-Regular;
    font-weight:400;
    color:rgba(50,50,50,1);
    text-align: center;
    word-wrap: break-word;
}
.inner.del{
    background-color: #e64340;
    width: 180rpx;
    text-align: center;
    z-index: 4;
    right: 0;
    color: #fff
}
.item-icon{
    width: 64rpx;
    vertical-align: middle;
    margin-right: 16rpx
}
.thumb{
    width: 200px;
    height: 200px;
    -webkit-overflow-scrolling: touch;
    overflow: scroll;
}


