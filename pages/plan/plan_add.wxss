.page{
	  width:100%;
    font-size:15px;
    font-family:NotoSansHans-Regular;
    font-weight:400;
    color:rgba(50,50,50,1);
    margin: 0; 
    background-color: rgba(255,255,255,1);
}

.line{
  height:5px;
  background-color: #F3F3F3;
}

.col-sel{
  height:30px;
  padding:10px;
}
.sel_td{
  margin-left:10px;
  color:rgba(144,144,144,1);
  width:70%;
}

.col-detail{
  padding:10px;
}

.col-title{
  margin-left:5px;
  margin-top:10px;
  font-size:12px;
  color:rgba(100,100,100,1);
}

.col-title .txt{
  margin-left:10px;
  font-size:12px;
  color:rgba(50,50,50,1);
}

.col-time{
  width:100px;
  padding:0 5px 0 10px;
  border: 1px solid #B3B3B3;
  height:28px;
}

.col-time .td1{
  width:85%;
  font-size:15px;
  font-family:Helvetica;
  color:rgba(50,50,50,1);
}

.col-time .td2{
  margin-right:5px;
}

.col-blank{
  margin-left:14px;
  margin-right:15px;
}

.col-status{
  font-size:15px;
  color:rgba(50,50,50,1);
}

.status_txt{
   margin-left:5px;
   margin-right:30px;
}

.col_flex{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.col_week{
  border-radius:5px;
  
  font-size:12px;
  text-align:center;
  line-height:24px;
  margin-right:20px;
}

.week_sel{
  width:50px;
  height:24px;
  background:rgba(127,148,255,1);
  color:rgba(255,255,255,1);
  margin-bottom:10px;
}

.week_nosel{
  width:48px;
  height:22px;
  border:1px solid rgba(179,179,179,1);
  color:rgba(144,144,144,1);
  margin-bottom:10px;
}

.col_btn{
  padding:120rpx 75rpx;
}

