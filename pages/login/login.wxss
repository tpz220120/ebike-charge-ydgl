@import '/style/backgroud/login-back.wxss';

.login{
  background:rgba(255,255,255,1);
  position: absolute;
  top:80px;
  left:0;
  height:70vh;
  width:90%;
  border-radius:10px;
  margin:0 5%;
}

.login-title{
  margin-top:40px;
  text-align:center;
  font-size:24px;
  font-family:JLinXin;
  font-weight:400;
  color:rgba(127,148,255,1);
  margin-bottom:30px;
}

.weui-flex {
  display: flex;
  align-items: center; /*垂直居中*/
}

.weui-flex__item {
  flex: 1;
}

.weui-input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 1.41176471em;
  line-height: 1.41176471;
  margin: 0 20px;
}

.login-btn{
  margin:60px 20px;
  background: linear-gradient(0deg,rgba(127,148,255,0.8),rgba(178,191,255,0.8));
  height:50px;
  color:rgba(255,255,255,1);
  border-radius:5px;
  text-align:center;
  line-height:50px;
}

.login-user{
  font-size:12px;
  font-family:MicrosoftYaHei;
  font-weight:400;
  color:rgba(178,178,178,1);
  margin-left:20px;
  margin-top:10px;
}

.login-line{
  height:1px;
  margin:0 20px;
  background:rgba(230,230,230,1);
}

.row-margin-left{
  margin-left:30px;
}
