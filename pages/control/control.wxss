.page{
	  width:100%;
    font-family: MicrosoftYaHei;
    font-size:15px;
    color:#323232;
    margin: 0;
    background-color: rgba(255,255,255,1);
}

.item-text {
	position:absolute;
	top: 52px;
	height:90vh;
	width:100%;
	overflow:auto;
}

.re-center {
  background-color: #FFFFFF;
  height:90vh;
  overflow: hidden;
}

.nor-img {
   text-align:center; 
   padding-top:40%;
}

.nor-text {
   position:relative;
   top:5%;
   text-align:center;
   font-size:20px;
   color:#CCCCCC;
}
.blank{
  width:20%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.selall{
   width:50px;
   height:23px;
   background:rgba(255,52,52,1);
   border-radius:4px;
   text-align: center;
   font-size:10px;
   line-height:23px;
   font-family:NotoSansHans-Regular;
   font-weight:400;
   color:rgba(255,255,255,1);
}

.col-btn{
   width:40px;
   height:23px;
   border-radius:4px;
   text-align: center;
   font-size:12px;
   line-height:23px;
   font-family:NotoSansHans-Regular;
   font-weight:400;
   color:rgba(255,255,255,1);
}

.col-red{
  background-color: #FF3434;
}

.col-green{
  background-color: #00CC00;
}

.yz_flex{
  display: flex;
  align-items: center;
  justify-content: center;
}

.col-title{
  font-size:12px;
  font-family:NotoSansHans-Regular;
  font-weight:400;
  color:rgba(144,144,144,1);
  height:34px;
  text-align: center;
  line-height: 34px;
}

.col-1{
  width:20%;
}

.col-2{
  width:45%;
}

.col-3{
  width:20%;
}

.col-4{
  width:15%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.col-detail{
  font-size:12px;
  font-family:NotoSansHans-Regular;
  font-weight:400;
  color:rgba(50,50,50,1);
  min-height:60px;
  text-align: center;
  word-wrap: break-word;
  padding:3px 0;
}

.line{
  height:5px;
  background-color: #F3F3F3;
}
.line2{
  height:2px;
  background-color: #F3F3F3;
}




