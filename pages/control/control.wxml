<view class="page">
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" bindconfirm="confirm" />
        <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
          <icon type="clear" size="14"></icon>
        </view>
      </view>
      <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
        <icon class="weui-icon-search" type="search" size="14" color="#3399FF"></icon>
        <view class="weui-search-bar__text">输入对象名称搜索</view>
      </label>
    </view>
    <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
  </view>
  <view class="line"></view>
  <view class="weui-tab">
    <view class="weui-navbar">
      <view class="blank">
      </view>
      <block wx:for="{{tabs}}" wx:key="*this">
        <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
          <view class="weui-navbar__title">{{item}}</view>
        </view>
      </block>
      <view class="blank">
        <view class="selall">
          一键断开
        </view>
      </view>
      <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
    </view>
    <view class="weui-tab__panel">
      <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
        <view class="item-text">
          <view wx:if="{{wcount == 0}}">
            <view class="re-center">
              <view class="nor-img">
                <image src="/image/no-record-yxs.png" style="width:180px;height:190px;" />
              </view>
              <view class="nor-text">暂无未执行管控事件</view>
            </view>
          </view>
          <view wx:if="{{wcount != 0}}">
            <view class="yz_flex col-title">
              <view class="col-1">
                对象
              </view>
              <view class="col-2">
                时间内容
              </view>
              <view class="col-3">
                发生时间
              </view>
              <view class="col-4">
                操作
              </view>
            </view>
            <view class="line2"></view>
            <block wx:for="{{items}}" wx:key="txt">
              <view class="yz_flex col-detail">
                <view class="col-1">
                  2F开水器
                </view>
                <view class="col-2">
                  {{item.txt}}
                </view>
                <view class="col-3">
                  2019-04-10 22：00
                </view>
                <view class="col-4">
                  <block wx:if="{{item.kqbz == '1'}}">
                    <view class="col-btn col-green">
                      开启
                    </view>
                  </block>
                  <block wx:if="{{item.kqbz == '0'}}">
                    <view class="col-btn col-red">
                      断开
                    </view>
                  </block>
                </view>
              </view>
              <view class="line2"></view>
            </block>
          </view>
        </view>
      </view>
      <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
        <view class="item-text">
          <view wx:if="{{ycount == 0}}">
            <view class="re-center">
              <view class="nor-img">
                <image src="/image/no-record-yxs.png" style="width:180px;height:190px;" />
              </view>
              <view class="nor-text">暂无已执行管控事件</view>
            </view>
          </view>
          <view wx:if="{{ycount != 0}}">
            <view class="yz_flex col-title">
              <view class="col-1">
                对象
              </view>
              <view class="col-2">
                时间内容
              </view>
              <view class="col-3">
                发生时间
              </view>
              <view class="col-4">
                操作员
              </view>
            </view>
            <view class="line2"></view>
            <block wx:for="{{items}}" wx:key="txt">
              <view class="yz_flex col-detail">
                <view class="col-1">
                  2F开水器
                </view>
                <view class="col-2">
                  {{item.txt}}
                </view>
                <view class="col-3">
                  2019-04-10 22：00
                </view>
                <view class="col-4">
                  {{item.name}}
                </view>
              </view>
              <view class="line2"></view>
            </block>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>